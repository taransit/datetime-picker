<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Global colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <!-- Global text appearances -->
        <item name="textAppearanceHeadline1">@style/AppTextAppearance.Text.H1</item>
        <item name="textAppearanceHeadline2">@style/AppTextAppearance.Text.H2</item>
        <item name="textAppearanceHeadline3">@style/AppTextAppearance.Text.H3</item>
        <item name="textAppearanceHeadline4">@style/AppTextAppearance.Text.H4</item>
        <item name="textAppearanceHeadline5">@style/AppTextAppearance.Text.H5</item>
        <item name="textAppearanceHeadline6">@style/AppTextAppearance.Text.H6</item>
        <item name="textAppearanceSubtitle1">@style/AppTextAppearance.Text.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/AppTextAppearance.Text.Subtitle2</item>
        <item name="textAppearanceBody1">@style/AppTextAppearance.Text.Body1</item>
        <item name="textAppearanceBody2">@style/AppTextAppearance.Text.Body2</item>
        <item name="textAppearanceCaption">@style/AppTextAppearance.Text.Caption</item>
        <item name="textAppearanceOverline">@style/AppTextAppearance.Text.Overline</item>
        <!-- Global component styles -->
        <item name="android:buttonStyle">@style/AppButton</item>
        <item name="buttonStyle">@style/AppButton</item>
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="android:borderlessButtonStyle">@style/AppButton.Borderless</item>
        <item name="borderlessButtonStyle">@style/AppButton.Borderless</item>
        <item name="tabStyle">@style/TabStyle</item>
    </style>

    <style name="AppTextAppearance"/>

    <style name="AppTextAppearance.Text.H1" parent="TextAppearance.MaterialComponents.Headline1">
    </style>

    <style name="AppTextAppearance.Text.H2" parent="TextAppearance.MaterialComponents.Headline2">
    </style>

    <style name="AppTextAppearance.Text.H3" parent="TextAppearance.MaterialComponents.Headline3">
    </style>

    <style name="AppTextAppearance.Text.H4" parent="TextAppearance.MaterialComponents.Headline4">
    </style>

    <style name="AppTextAppearance.Text.H5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="AppTextAppearance.Text.H6" parent="TextAppearance.MaterialComponents.Headline6">
    </style>

    <style name="AppTextAppearance.Text.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
    </style>

    <style name="AppTextAppearance.Text.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextAppearance.Text.Body1" parent="TextAppearance.MaterialComponents.Body1">
    </style>

    <style name="AppTextAppearance.Text.Body2" parent="TextAppearance.MaterialComponents.Body2">
    </style>

    <style name="AppTextAppearance.Text.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#5f5310</item>
    </style>

    <style name="AppTextAppearance.Text.Caption.Bold" parent="AppTextAppearance.Text.Caption">
    </style>

    <style name="AppTextAppearance.Text.Overline" parent="TextAppearance.MaterialComponents.Overline">
    </style>

    <style name="AppTextAppearance.Button">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTextAppearance.Text.Subtitle1.Semibold" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="AppTextAppearance.Text.Subtitle1.Bold" parent="TextAppearance.MaterialComponents.Subtitle1">
    </style>

    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorSecondary</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorSecondary</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.DateTimePickerDialog">
        <item name="android:textSize">16sp</item>
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppButton.Borderless" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:backgroundTint">@color/colorOnSecondary</item>
        <item name="backgroundTint">@color/colorOnSecondary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CustomTimePickerTheme">
        <item name="android:textSize">16sp</item>
        <item name="colorPrimary">#FF00AA</item>
    </style>

</resources>